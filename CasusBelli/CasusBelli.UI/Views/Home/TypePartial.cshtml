@model CasusBelli.Domain.Entities.ProductType

    @if ((Model.TypeId%2) == 0)
    {
      <div>
          <div class="typeimage" style="padding-right: 18%; float: right;">
              <a href="~/ProductsList?TypeId=@Model.TypeId">
                  <img src="@Url.Action("GetImageType", "Home", new { Model.TypeId })" />
              </a>
          </div>
          <div style="position: relative; float: right; top: 65px; right: 35px; width: 18%; height: 50px; ">
              <a href="~/ProductsList?TypeId=@Model.TypeId">
                  <div class="arrowlinkright"></div>
                  <span style="color: #C6E0BC;">@Model.TypeName</span>
              </a>
          </div>
    </div>
    }
    else
    {
        <div>
        <div class="typeimage" style="padding-left: 18%;">
            <a href="~/ProductsList?TypeId=@Model.TypeId">
                <img src="@Url.Action("GetImageType", "Home", new {Model.TypeId})" />
            </a>
            </div>
        <div style="position: relative; float: right; top: -67px; right: 18px; width: 18%; height: 50px;">
            <a href="~/ProductsList?TypeId=@Model.TypeId">
                <div class="arrowlinkleft"></div>
                <span style="color: #C6E0BC;">@Model.TypeName</span>
            </a>
            </div>
        </div>
    }